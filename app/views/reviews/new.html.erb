<div class="container">

<h1>Add a new review to <%= @restaurant.name %></h1>

  <%= form_for([@restaurant, @review]) do |f| %>
  <div class="form-group">
    <%= f.label :content %>
    <%= f.text_field :content, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :rating %>
    <%= f.select :rating, [0, 1, 2, 3, 4, 5] %>
  </div>
  <%= f.submit class: 'btn btn-primary' %>
  <% end %>
</div>
